<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clinical_Project.MainPage">


    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto" 
              Padding="0">

            <!-- Header Section with Gradient Background -->
            <BoxView Grid.Row="0" 
                     HeightRequest="280">
                <BoxView.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#00ACC1" Offset="0.0" />
                        <GradientStop Color="#0097A7" Offset="1.0" />
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>

            <!-- Header Content -->
            <VerticalStackLayout Grid.Row="0" 
                                Padding="20,40,20,20"
                                Spacing="15">

                <!-- Clinic Logo and Name -->
                <HorizontalStackLayout HorizontalOptions="Center" 
                                      Spacing="12">
                    <!-- Logo Icon (Shield with Medical Cross) -->
                    <Border StrokeShape="RoundRectangle 12"
                            BackgroundColor="White"
                            Stroke="Transparent"
                            Padding="12"
                            WidthRequest="50"
                            HeightRequest="50">
                        <Label Text="⚕"
                               FontSize="28"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>

                    <VerticalStackLayout VerticalOptions="Center" 
                                        Spacing="0">
                        <Label Text="Dr. Ahmed"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="White"/>
                        <Label Text="Orthopedic Clinic"
                               FontSize="16"
                               TextColor="White"
                               Opacity="0.9"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>

                <!-- Medical Illustration -->
                <Border StrokeShape="RoundRectangle 20"
                        BackgroundColor="White"
                        Stroke="Transparent"
                        WidthRequest="180"
                        HeightRequest="180"
                        HorizontalOptions="Center"
                        Margin="0,15,0,0">
                    <Border.Shadow>
                        <Shadow Brush="Black" 
                                Opacity="0.15" 
                                Radius="20" 
                                Offset="0,5" />
                    </Border.Shadow>

                    <!-- Medical Icon (Skeleton/Bone representation) -->
                    <Grid>
                        <Label Text="🦴"
                               FontSize="80"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Opacity="0.3"/>
                        <Label Text="🏥"
                               FontSize="60"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>
            </VerticalStackLayout>

            <!-- Main Content Section -->
            <VerticalStackLayout Grid.Row="1" 
                                Padding="30,30,30,20"
                                Spacing="25">

                <!-- Welcome Message -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Welcome to Our Clinic"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#1A1A1A"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>

                    <Label Text="Your trusted partner in bone and joint health"
                           FontSize="15"
                           TextColor="#666666"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           LineHeight="1.4"/>
                </VerticalStackLayout>

                <!-- Feature Highlights -->
                <Grid ColumnDefinitions=",,*" 
                      ColumnSpacing="15"
                      Margin="0,10,0,0">

                    <!-- Expert Care -->
                    <VerticalStackLayout Grid.Column="0" 
                                        Spacing="8"
                                        HorizontalOptions="Center">
                        <Border StrokeShape="RoundRectangle 15"
                                BackgroundColor="#E0F7FA"
                                Stroke="Transparent"
                                WidthRequest="55"
                                HeightRequest="55"
                                HorizontalOptions="Center">
                            <Label Text="👨‍⚕"
                                   FontSize="28"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Expert Care"
                               FontSize="11"
                               TextColor="#555555"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>

                    <!-- Modern Tech -->
                    <VerticalStackLayout Grid.Column="1" 
                                        Spacing="8"
                                        HorizontalOptions="Center">
                        <Border StrokeShape="RoundRectangle 15"
                                BackgroundColor="#E0F7FA"
                                Stroke="Transparent"
                                WidthRequest="55"
                                HeightRequest="55"
                                HorizontalOptions="Center">
                            <Label Text="🔬"
                                   FontSize="28"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Modern Tech"
                               FontSize="11"
                               TextColor="#555555"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>

                    <!-- 24/7 Support -->
                    <VerticalStackLayout Grid.Column="2" 
                                        Spacing="8"
                                        HorizontalOptions="Center">
                        <Border StrokeShape="RoundRectangle 15"
                                BackgroundColor="#E0F7FA"
                                Stroke="Transparent"
                                WidthRequest="55"
                                HeightRequest="55"
                                HorizontalOptions="Center">
                            <Label Text="🏥"
                                   FontSize="28"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="24/7 Care"
                               FontSize="11"
                               TextColor="#555555"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Grid>

                <!-- Action Buttons -->
                <VerticalStackLayout Spacing="15" 
                                    Margin="0,20,0,0">

                    <!-- New Patient Button -->
                    <Border StrokeShape="RoundRectangle 12"
                            BackgroundColor="#00ACC1"
                            Stroke="Transparent"
                            HeightRequest="56">
                        <Border.Shadow>
                            <Shadow Brush="#00ACC1" 
                                    Opacity="0.4" 
                                    Radius="15" 
                                    Offset="0,4" />
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToRegisterCommand}" />
                        </Border.GestureRecognizers>

                        <HorizontalStackLayout HorizontalOptions="Center"
                                              VerticalOptions="Center"
                                              Spacing="10">
                            <Label Text="➕"
                                   FontSize="20"
                                   TextColor="White"
                                   VerticalOptions="Center"/>
                            <Label Text="I'm a New Patient"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Existing Patient Button -->
                    <Border StrokeShape="RoundRectangle 12"
                            BackgroundColor="White"
                            Stroke="#00ACC1"
                            StrokeThickness="2"
                            HeightRequest="56">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToLoginCommand}" />
                        </Border.GestureRecognizers>

                        <HorizontalStackLayout HorizontalOptions="Center"
                                              VerticalOptions="Center"
                                              Spacing="10">
                            <Label Text="👤"
                                   FontSize="20"
                                   TextColor="#00ACC1"
                                   VerticalOptions="Center"/>
                            <Label Text="I Already Have an Account"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#00ACC1"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Footer Section -->
            <VerticalStackLayout Grid.Row="2" 
                                Padding="20,10,20,30"
                                Spacing="8">

                <Label Text="Contact us at +20-xxx-xxx-xxxx or visit"
                       FontSize="13"
                       TextColor="#888888"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>

                <Label Text="www.drahmedclinic.com"
                       FontSize="13"
                       TextColor="#00ACC1"
                       TextDecorations="Underline"
                       HorizontalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenWebsiteCommand}" />
                    </Label.GestureRecognizers>
                </Label>

                <Label Text="© 2024 Dr. Ahmed Orthopedic Clinic. All rights reserved."
                       FontSize="11"
                       TextColor="#AAAAAA"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,8,0,0"/>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>